<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.taskmanagement.presentation.fragments.LoginFragment"
        android:label="Вход"
        tools:layout="@layout/fragment_login">
    </fragment>

    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.example.taskmanagement.presentation.fragments.TaskListFragment"
        android:label="Задачи"
        tools:layout="@layout/fragment_task_list">
        <action
            android:id="@+id/action_taskListFragment_to_taskFormFragment"
            app:destination="@id/taskFormFragment" />
        <action
            android:id="@+id/action_taskListFragment_to_taskDetailFragment"
            app:destination="@id/taskDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/userListFragment"
        android:name="com.example.taskmanagement.presentation.fragments.UserListFragment"
        android:label="Пользователи"
        tools:layout="@layout/fragment_user_list">
        <action
            android:id="@+id/action_userListFragment_to_userFormFragment"
            app:destination="@id/userFormFragment" />
        <action
            android:id="@+id/action_userListFragment_to_userDetailFragment"
            app:destination="@id/userDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.taskmanagement.presentation.fragments.ProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="com.example.taskmanagement.presentation.fragments.TaskDetailFragment"
        android:label="Детали задачи"
        tools:layout="@layout/fragment_task_detail">

        <action
            android:id="@+id/action_taskDetailFragment_to_taskFormFragment"
            app:destination="@+id/taskFormFragment" />

    </fragment>


    <fragment
        android:id="@+id/userDetailFragment"
        android:name="com.example.taskmanagement.presentation.fragments.UserDetailFragment"
        android:label="Детали пользователя"
        tools:layout="@layout/fragment_user_detail">
    <action
        android:id="@+id/action_userDetailFragment_to_userFormFragment"
        app:destination="@id/userFormFragment" />
    </fragment>

    <fragment
        android:id="@+id/userFormFragment"
        android:name="com.example.taskmanagement.presentation.fragments.UserFormFragment"
        android:label="Пользователь"
        tools:layout="@layout/fragment_user_form" />

    <fragment
        android:id="@+id/taskFormFragment"
        android:name="com.example.taskmanagement.presentation.fragments.TaskFormFragment"
        android:label="Задача"
        tools:layout="@layout/fragment_task_form" />

</navigation>